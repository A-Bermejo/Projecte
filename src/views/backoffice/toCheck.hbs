 

 <div class="container-fluid ">
    <div class="row d-flex text-center">
       <table class="table">
  <thead>
    <tr>
        <th scope="col">Img</th>
        <th scope="col">Nom</th>
        <th scope="col">Descripcio</th>
        <th scope="col">Ingredientes</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Pais</th>
        <th scope="col">Tiempo</th>
        <th scope="col">Usuario</th>
      </tr>
  </thead>
  <tbody>
      {{#each response}}
    <tr>
        <th scope="row"><img src="/uploads/{{this.img}}"></th>
        <td>{{this.nom_recepta}}</td>
        <td>{{this.descripcio_recepta}}</td>
        <td>{{#each this.ingredients}}<p>{{this}}</p> {{/each}}</td>
        <td>{{#each this.cantidad}}<p>{{this}}</p> {{/each}}</td>
        <td>{{this.nombre_pais}}</td>
        <td>{{this.temps}}</td>
        <td>{{this.nom_usuari}}</td>
        <td><button mail="{{this.mail}}" name="{{this.nom_recepta}}" value="{{this.id_recepta}}" type="button" class="btn btn-success">☑</button>
        <td><button mail="{{this.mail}}" name="{{this.nom_recepta}}" value="{{this.id_recepta}}" type="button" class="btn btn-danger">❌</button>
</button>
</td>
    </tr>
    {{/each}}
 
  </tbody>
</table>
    </div>
</div>      